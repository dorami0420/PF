<div class="card-list-container py-5">
  <% protective_cats.each do |p_cat| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to protective_cat_path(p_cat.id) do %>
      <%= image_tag p_cat.get_image, class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag p_cat.user.get_profile_image(100,100), class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(protective_cat_path(p_cat.id), class:"text-dark") do %>
             
            <% end %>
          </p>
          <p class="card-text">説明：<%= p_cat.caption %></p>
          <span><i class="fas fa-user"></i> By <%= p_cat.user.name %> ｜ </span>
          <span><%= link_to "#{p_cat.post_comments.count} コメント", protective_cat_path(p_cat.id), class:"text-dark" %></span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <%= paginate protective_cats %>
</div>